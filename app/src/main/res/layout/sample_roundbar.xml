        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <include layout="@layout/round_header_item" android:id="@+id/id"/>

            <include layout="@layout/round_header_item" android:id="@+id/id"/>

            <include layout="@layout/round_header_item_selected" android:id="@+id/id"/>

            <include layout="@layout/round_header_item" android:id="@+id/id"/>

            <include layout="@layout/round_header_item" android:id="@+id/id"/>

            <include layout="@layout/round_header_item" android:id="@+id/id"/>


        </LinearLayout>
    </HorizontalScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>