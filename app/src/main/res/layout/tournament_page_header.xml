<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tournament_page_header_main_layout"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tournament_page_header_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:foreground="#44000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0">

                <ImageButton
                    android:id="@+id/tournament_page_header_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_left"
                    android:layout_gravity="start"
                    app:backgroundTint="#00FFFFFF"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:gravity="end" >

                    <Button
                        android:id="@+id/tournament_page_header_delete_button"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="end"
                        android:textColor="#FF0000"
                        android:textAllCaps="false"
                        android:background="@drawable/dispute_button_border"
                        android:orientation="horizontal"/>

                    <Button
                        android:id="@+id/tournament_page_header_create_button"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="end"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:background="@drawable/dispute_button_border"
                        android:orientation="horizontal"/>

                    <Button
                        android:id="@+id/tournament_page_header_dispute_button"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="end"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:background="@drawable/dispute_button_border"
                        android:orientation="horizontal"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:layout_marginTop="16dp"
                    android:id="@+id/tournament_page_header_tournament_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="36dp"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tournament_page_header_sub_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:src="@drawable/tournament_corner"/>
        </LinearLayout>

    </RelativeLayout>

</merge>