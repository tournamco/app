<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <Spinner
            android:id="@+id/filter_dropdown_spinner"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/gradient_spinner"
            android:spinnerMode="dropdown"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/filter_dropdown_text"
            app:layout_constraintDimensionRatio="3:1"
            app:layout_constraintLeft_toLeftOf="@+id/filter_dropdown_text"
            app:layout_constraintRight_toRightOf="@+id/filter_dropdown_text"
            app:layout_constraintTop_toTopOf="@+id/filter_dropdown_text"
            app:layout_constraintVertical_bias="0.594"
            app:layout_constraintWidth_percent="0.3"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/filter_dropdown_text"
            android:layout_width="@+id/filter_dropdown_spinner"
            android:layout_height="@+id/filter_dropdown_spinner"
            android:text="Filter"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#A23BC6"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/filter_dropdown_spinner"
            app:layout_constraintDimensionRatio="3:1"
            app:layout_constraintLeft_toLeftOf="@+id/filter_dropdown_spinner"
            app:layout_constraintRight_toRightOf="@+id/filter_dropdown_spinner"
            app:layout_constraintTop_toTopOf="@+id/filter_dropdown_spinner"
            app:layout_constraintVertical_bias="0.592"
            app:layout_constraintWidth_percent="0.3" />




</androidx.constraintlayout.widget.ConstraintLayout>