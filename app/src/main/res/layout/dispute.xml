<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/timeToGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="30 minutes until the next game"
            android:textAllCaps="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="52dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/teamNameA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="Team A"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/gameNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Game 1"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="52dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/teamNameB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="20dp"
                    android:text="Team B"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/gameInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finals, Best of 3"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/scoreTeamA"
                        android:layout_width="72dp"
                        android:layout_height="60dp"
                        android:background="@drawable/purple_outline"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/scoreTeamB"
                        android:layout_width="72dp"
                        android:layout_height="60dp"
                        android:background="@drawable/purple_outline"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="24sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageProofA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageProofB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/agreeButtonA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/gradient_spinner"
                    android:text="Agree"
                    android:textAllCaps="false"
                    android:textColor="#A23BC6"
                    android:textSize="16sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/scoreTeamB2"
                        android:layout_width="72dp"
                        android:layout_height="60dp"
                        android:background="@drawable/purple_outline"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/scoreTeamA2"
                        android:layout_width="72dp"
                        android:layout_height="60dp"
                        android:background="@drawable/purple_outline"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="24sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageProofA2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imageProofB2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="12dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/agreeButtonB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/gradient_spinner"
                    android:text="Agree"
                    android:textAllCaps="false"
                    android:textColor="#A23BC6"
                    android:textSize="16sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="10dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>